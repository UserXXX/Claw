<UserControl x:Name="self"
             x:Class="Claw.UI.Controls.BlockEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Text="{Binding Title,ElementName=self}"/>
        <CheckBox VerticalAlignment="Top" HorizontalAlignment="Right" Content="Abort if button is released (inverse macro)" Margin="0,5,5,0"/>
        
        <!-- Item grid. -->
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,25,0,30">
            
        </Grid>
        
        <!-- Timeline. -->
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="30" BorderBrush="{DynamicResource MidBrush}" BorderThickness="1">
            
        </Border>
    </Grid>
</UserControl>
