<!-- Resource dictionary for global objects regarding the look and feel of the application. -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Claw.UI.Controls">

    <!-- Basic colors used by the application. -->
    <Color x:Key="BackColor" R="30" G="30" B="30" A="255"/>
    <Color x:Key="MidColor" R="255" G="0" B="0" A="255"/>
    <Color x:Key="ForeColor" R="255" G="255" B="255" A="255"/>

    <Color x:Key="InteractColor" R="0" G="0" B="0" A="255"/>
    <Color x:Key="HoverColor" R="60" G="60" B="60" A="255"/>
    <Color x:Key="SelectedColor" R="100" G="10" B="10" A="255"/>
    <Color x:Key="DisabledMidColor" R="90" G="90" B="90" A="255"/>

    <Color x:Key="SemiTransparentColor" R="0" G="0" B="0" A="128"/>

    <!-- Brushes for the basic colors. -->
    <SolidColorBrush x:Key="BackBrush" Color="{DynamicResource BackColor}"/>
    <SolidColorBrush x:Key="MidBrush" Color="{DynamicResource MidColor}"/>
    <SolidColorBrush x:Key="ForeBrush" Color="{DynamicResource ForeColor}"/>
    <SolidColorBrush x:Key="InteractBrush" Color="{DynamicResource InteractColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{DynamicResource HoverColor}"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="{DynamicResource SelectedColor}"/>
    <SolidColorBrush x:Key="DisabledMidBrush" Color="{DynamicResource DisabledMidColor}"/>

    <SolidColorBrush x:Key="SemiTransparentMidBrush" Color="{DynamicResource MidColor}" Opacity="0.5"/>
    <SolidColorBrush x:Key="SemiTransparentSelectedBrush" Color="{DynamicResource SelectedColor}" Opacity="0.65"/>
    <SolidColorBrush x:Key="SemiTransparentHoverBrush" Color="{DynamicResource HoverColor}" Opacity="0.5"/>
    <SolidColorBrush x:Key="SemiTransparentBrush" Color="{StaticResource SemiTransparentColor}"/>

    <!-- Images for the ClawWindow. -->
    <BitmapImage x:Key="TileImage" UriSource="../../Resources/Tile.png"/>
    <BitmapImage x:Key="WETopLeftImage" UriSource="../../Resources/Window Edge Top Left.png"/>
    <BitmapImage x:Key="WETopRightImage" UriSource="../../Resources/Window Edge Top Right.png"/>
    <BitmapImage x:Key="WEBotLeftImage" UriSource="../../Resources/Window Edge Bottom Left.png"/>
    <BitmapImage x:Key="WEBotRightImage" UriSource="../../Resources/Window Edge Bottom Right.png"/>
    <BitmapImage x:Key="SolidImage" UriSource="../../Resources/Solid.png"/>

    <DrawingImage x:Key="CloseImage">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="{DynamicResource MidBrush}">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,20,20"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <DrawingGroup.OpacityMask>
                    <ImageBrush ImageSource="../../Resources/Close.png"/>
                </DrawingGroup.OpacityMask>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

